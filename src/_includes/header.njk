<div class='header'>
  <a class="header-logo" href="/">{{ site.title }}</a>
  <div class="menu-main">
    <ul>
      {% for item in navigation.main %}
      <li class="menu-item-{{ item.name | lower }} {% if page.url == item.url %}active{% endif %}">
        <a href="{{ item.url }}">
          <span>{{ item.name }}</span>
        </a>
      </li>
      {% endfor %}
    </ul>
  </div>
  <div id="toggle-menu-main-mobile" class="hamburger-trigger">
    <button class="hamburger">Menu</button>
  </div>
</div>
